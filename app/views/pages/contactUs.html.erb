<h2>Contact Us</h2>
      <hr />
      <div>
         <div >   
            <form class="well form-horizontal" action=" " method="post"  id="contact_form">
            <fieldset> 
           <!-- Text input-->
            <div class="form-group">
            <label class="col-md-4 control-label">Name*</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <input  name="cntct_name" id="cntct_name" placeholder="Name" class="form-control"  type="text">
            </div>
            </div>
            </div>
            
            <!-- Text input-->
               <div class="form-group">
            <label class="col-md-4 control-label">E-Mail*</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            <input name="cntct_email" id="cntct_email" placeholder="E-Mail Address" class="form-control"  type="text">
            </div>
            </div>
            </div>
            
            
            <!-- Text input-->
               
            <div class="form-group">
            <label class="col-md-4 control-label">Phone #</label>  
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>
            <input name="cntct_phone" id="cntct_phone" placeholder="(845)555-1212" class="form-control" type="text">
            </div>
            </div>
            </div>
            
            <!-- Text input-->
              
            <div class="form-group">
            <label class="col-md-4 control-label">Message*</label>
            <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                    <textarea class="form-control" name="cntct_message" id="cntct_message" placeholder="Comments"></textarea>
            </div>
            
            <!-- Success message -->
            <br>
            <div class="alert alert-success collapse" role="alert" id="cntct_success_message"></div>
            </div>
            </div>
            <!-- Text input-->
            
            
            
            <!-- Button -->
            <div class="form-group">
            <label class="col-md-4 control-label"></label>
            <div class="col-md-4">
            <button type="submit" class="btn btn-warning" >Send <span class="glyphicon glyphicon-send"></span> <span class="collapse contact-spin glyphicon glyphicon-refresh glyphicon-spin"></span></button>
            </div>
            </div>
            
            </fieldset>
            </form>
            </div>
      </div>